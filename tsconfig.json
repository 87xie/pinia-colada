{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    // TSUP issue https://github.com/egoist/tsup/issues/571
